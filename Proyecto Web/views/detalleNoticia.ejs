<%- include('partials/headerUsuario') %>
<link rel="stylesheet" href="/public/css/detalleNoticia.css">

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary display-4 mb-3"><%= noticia.titulo %></h1>
        <p class="text-muted fs-6 mb-0">
            <strong>Autor:</strong> <%= noticia.autor %> &nbsp;|&nbsp; 
            <strong>Fecha:</strong> <%= noticia.fechaPublicacion.toLocaleDateString('es-ES') %> &nbsp;|&nbsp; 
            <strong>Categoría:</strong> <span class="badge bg-primary text-uppercase"><%= noticia.categoria %></span>
        </p>
    </div>

    <!-- Imagen destacada -->
    <% if (noticia.imagen) { %>
        <div class="text-center mb-5">
            <img src="<%= noticia.imagen %>" alt="<%= noticia.titulo %>" class="img-fluid rounded shadow-lg border" style="max-height: 500px; object-fit: cover; width: 100%;">
        </div>
    <% } else { %>
        <div class="text-center mb-5">
            <div class="bg-secondary text-white d-flex justify-content-center align-items-center rounded shadow-lg" style="height: 300px;">
                <p class="mb-0 fs-4">Sin imagen disponible</p>
            </div>
        </div>
    <% } %>

    <!-- Contenido de la noticia -->
    <div class="contenido-noticia mb-5">
        <div class="fs-5 text-muted" style="line-height: 1.8; text-align: justify;">
            <% noticia.contenido.split('\n').forEach(parrafo => { %>
                <p><%= parrafo %></p>
            <% }) %>
        </div>
    </div>

    <!-- Botón para regresar -->
    <div class="text-center">
        <a href="/noticias" class="btn btn-outline-primary btn-lg px-5 py-3 shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a Noticias
        </a>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white mt-5 py-4">
    <div class="container text-center">
        <p class="mb-0 fs-6">© <%= new Date().getFullYear() %> Noticias Web. Todos los derechos reservados.</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css">
</body>
</html>
