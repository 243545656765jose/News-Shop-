<div class="container">
    <h1>Editar usuario</h1>
    <form action="/editar/<%= user._id %>" method="post">
        <legend>Agregar un usuario</legend>
        <div class="form-group p-3">
            <input value="<%= user.name %>" type="text" id="name" class="form-control" name="name">
        </div>
        <div class="form-group p-3">
            <input value="<%= user.email %>" type="text" id="email" class="form-control" name="email">
        </div>
        <button class="btn btn-primary" type="submit">Actualizar</button>
    </form>
    <br>
    <a href="/">Volver a la lista de usuarios</a>
</div>
