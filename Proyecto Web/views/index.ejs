<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.o">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    <title>BD</title>
  </head>
  <body>
    <h1>Usuario</h1>
    <div class="container">
      <form action="/add" method="post">
        <legend>Agregar un usuario</legend>
        <div class="form-group p-3">
          <input placeholder="Digite su nombre" type="text" id="name"
            class="form-control" name="name">
        </div>
        <div class="form-group p-3">
          <input placeholder="Digite su contraseÃ±a" type="text" id="password"
            class="form-control" name="password">
        </div>
        <div class="form-group p-3">
          <input placeholder="Digite su correo" type="text" id="email"
            class="form-control" name="email">
        </div>
        <button class="btn btn-primary">Agregar</button>
      </form>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <form action="/delete" method="POST" style="display:inline;">
                <input type="hidden" name="id" value="<%= user._id %>">
                <button type="submit">Eliminar</button>
              </form>
            </td>
            <td>
              <form action="/editar/<%= user._id %>" method="get"
                style="display:inline;">
                <input type="hidden" name="id" value="<%= user._id %>">
                <button type="submit">Actualizar</button>
              </form>
            </td>

          </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
    <script>
    document.getElementById('name').focus();
    </script>

  </body>
</html>