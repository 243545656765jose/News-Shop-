<%- include('partials/headerUsuario') %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Lista de Noticias</h1>
        <div class="row">
            <% noticias.forEach(noticia => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (noticia.imagen) { %>
                            <img src="<%= noticia.imagen %>" class="card-img-top" alt="Imagen de <%= noticia.titulo %>">
                        <% } else { %>
                            <img src="/img/default.jpg" class="card-img-top" alt="Imagen por defecto">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= noticia.titulo %></h5>
                            <p class="card-text"><%= noticia.contenido.substring(0, 100) %>...</p>
                            <p class="text-muted"><strong>Autor:</strong> <%= noticia.autor %></p>
                            <p class="text-muted"><strong>Categor√≠a:</strong> <%= noticia.categoria %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
